# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (MySQL)
# Use 127.0.0.1 instead of localhost if you get ECONNREFUSED on ::1:3306 (Windows)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=leaderboard_db

# Redis Configuration (Upstash Redis URL)
REDIS_URL=redis://default:your_password@your-redis-host:6379

# Example Upstash Redis URL format:
# REDIS_URL=redis://default:AbCdEf123456@usw1-xxxxx.upstash.io:6379

# New Relic Monitoring (Optional)
# Set NEW_RELIC_ENABLED=false to disable monitoring
# NEW_RELIC_ENABLED=true
# NEW_RELIC_LICENSE_KEY=your_license_key_here
# NEW_RELIC_APP_NAME=gocomet-leaderboard-backend
# NEW_RELIC_LOG_LEVEL=info
# NEW_RELIC_DISTRIBUTED_TRACING_ENABLED=false
